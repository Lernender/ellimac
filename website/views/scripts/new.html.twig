{% extends "layout/layout.html.twig" %}

{% block content %}
<section class="uk-padding uk-padding-remove-horizontal">
    <div class="uk-container">
        <form method="post" action="{{ request.path_info }}" data-uk-grid>
            <div data-uk-grid>
                <div class="uk-width-5-6@s">
                    <div data-uk-grid>
                        <div class="uk-width-1-6@m">
                            <div class="cp-bold cp-blue">Projekt</div>
                        </div>
                        <div class="uk-width-1-6@m uk-width-1-3@s">
                            <div class="cp-bold">Projektname</div>
                        </div>
                        <div class="uk-width-2-3@s">
                            <input class="cp-text-input uk-button uk-button-small" type="text" name="project">
                        </div>

                        <div class="uk-width-1-6@m uk-margin-top">
                        </div>
                        <div class="uk-width-1-6@m uk-margin-top">
                            <div class="cp-bold">Projekt-URL</div>
                        </div>
                        <div class="uk-width-2-3@m uk-margin-top">
                            <input class="cp-text-input uk-button uk-button-small" type="text" name="pro_url">
                        </div>

                        <div class="uk-width-1@m">
                            <hr class="cp-hr">
                        </div>

                        <div class="uk-width-1-6@m">
                            <div class="cp-bold cp-blue">Kundeninfo</div>
                        </div>
                        <div class="uk-width-1-6@m">
                            <div class="cp-bold">Kunde</div>
                        </div>
                        <div class="uk-width-2-3@m">
                            <input class="cp-text-input uk-button uk-button-small" type="text" name="client">
                        </div>

                        <div class="uk-width-1-6@m uk-margin-top">
                            <div></div>
                        </div>
                        <div class="uk-width-1-6@m uk-margin-top">
                            <div class="cp-bold">Adresse</div>
                        </div>
                        {#$address = SELECT cli_address FROM client WHERE cli_id=$id#}
                        <div class="uk-width-2-3@m uk-margin-top">
                            <input class="cp-text-input uk-button uk-button-small" type="text"
                                   name="cli_address">
                        </div>

                        <div class="uk-width-1-6@m uk-margin-top">
                            <div></div>
                        </div>
                        <div class="uk-width-1-6@m uk-margin-top">
                            <div class="cp-bold">PLZ/Ort</div>
                        </div>
                        <div class="uk-width-2-3@m uk-margin-top">
                            <div data-uk-grid>
                                <div class="uk-width-1-3@m "><input
                                            class="cp-text-input uk-button uk-button-small" type="text"
                                            name="cli_zipCode"></div>
                                <div class="uk-width-2-3@m "><input
                                            class="cp-text-input uk-button uk-button-small" type="text"
                                            name="cli_city"></div>
                            </div>
                        </div>

                        <div class="uk-width-1@m">
                            <hr class="cp-hr">
                        </div>

                        <div class="uk-width-1-6@m">
                            <div class="cp-bold cp-blue">Allg. Info</div>
                        </div>
                        <div class="uk-width-1-6@m">
                            <div class="cp-bold">Partner</div>
                        </div>
                        <div class="uk-width-2-3@m">
                            <select name="par_id" class="uk-select cp-select">
                                <option>bitte wählen</option>
                                {% for partner in partners %}
                                    <option>
                                        {{ project.par_name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="uk-width-1-6@m uk-margin-top"></div>

                        <div class="uk-width-1-6@m uk-margin-top">
                            <div class="cp-bold">Server</div>
                        </div>
                        <div class="uk-width-2-3@m uk-margin-top">
                            <select name="ser_id" class="uk-select cp-select">
                                <option>bitte wählen</option>
                                {% for server in servers %}
                                    <div>
                                        <option>
                                            {{ project.ser_name }} | {{ project.ser_ip }}
                                        </option>
                                    </div>
                                {% endfor %}
                            </select>
                        </div>

                    </div>
                </div>
                <div class="uk-width-expand">
                    <div class="uk-width-1-1@m">
                        <button type="submit" name="save"
                           class="cp-button uk-button uk-card-default uk-card-hover uk-button-small uk-align-right uk-margin-small-bottom">Speichern</button>
                    </div>

                    <div class="uk-width-1-1@m">
                        {#$delete = Database.pgp->delete();#}
                        <a href="/projects"
                           class="cp-button uk-button uk-card-default uk-card-hover uk-button-small uk-align-right uk-margin-small-bottoms">Abbrechen</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

{% endblock %}
