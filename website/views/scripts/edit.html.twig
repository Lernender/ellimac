                    <div class="uk-width-1-1@m">
                        <a href="/projects/{{ project.pro_id }}" class="cp-button uk-button uk-card-default uk-card-hover uk-button-small uk-align-right uk-margin-small-bottom">Abbrechen</a>
                    </div>
                    <div class="uk-width-1-1@m">
                        {#$delete = Database.pgp->delete();#}
                        <button name="delete" class="cp-button uk-button uk-card-default uk-card-hover uk-button-small uk-align-right uk-margin-small-bottoms">Löschen</button>
