                            <div class="cp-bold">Server</div>
                        </div>
                        <div class="uk-width-2-3@m uk-margin-top">
                            <select name="ser_id" class="uk-select cp-select">
                                <option>bitte wählen</option>s
                                {% for server in projects %}
                                    <option {#{% if object.server_id === server.id ? 'selected' : '' %}#}>
                                        {{ server.server.ser_name }} | {{ server.server.ser_ip }}
                                    </option>
                                {% endfor %}
                                {#<?php foreach ($servers as $server): ?>
                                    <option><?=$serverData; ?></option>
                                <?php endforeach;?>#}
