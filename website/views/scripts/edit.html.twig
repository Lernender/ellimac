                            <input class="cp-text-input uk-button uk-button-small" type="text" name="project" value="{{ project.pro_name }}">
                        </div>

                        <div class="uk-width-1-6@m uk-margin-top">
                        </div>
                        <div class="uk-width-1-6@m uk-margin-top">
                            <div class="cp-bold">Projekt-URL</div>
                        </div>
                        <div class="uk-width-2-3@m uk-margin-top">
                            <input class="cp-text-input uk-button uk-button-small" type="text" name="pro_url" value="{{ project.pro_url }}">
                        </div>

                        <div class="uk-width-1@m">
                            <hr class="cp-hr">
                        </div>

                        <div class="uk-width-1-6@m">
                            <div class="cp-bold cp-blue">Kundeninfo</div>
                        </div>
                        <div class="uk-width-1-6@m">
                            <div class="cp-bold">Kunde</div>
                        </div>
                        <div class="uk-width-2-3@m">
                            <input class="cp-text-input uk-button uk-button-small" type="text" name="client" value="{{ project.cli_name }}">
                        </div>

                        <div class="uk-width-1-6@m uk-margin-top">
                            <div></div>
                        </div>
                        <div class="uk-width-1-6@m uk-margin-top">
                            <div class="cp-bold">Adresse</div>
                        </div>
                        {#$address = SELECT cli_address FROM client WHERE cli_id=$id#}
                        <div class="uk-width-2-3@m uk-margin-top">
                            <input class="cp-text-input uk-button uk-button-small" type="text" name="cli_address" value="{{ project.cli_address }}">
