                        </div>
                        <div class="uk-width-1-6@m">
                            <div class="cp-bold">Partner</div>
                        </div>
                        <div class="uk-width-2-3@m">
                            <select name="par_id" class="uk-select cp-select">
                                <option checked>bitte wählen</option>
                                {% for partner in partners %}
                                    <option {#{% if project.par_id === project.pro_id ? 'selected' : '' %}#}>
                                        {{ partner.name }} | {{ partner.city }}
