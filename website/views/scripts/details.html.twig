{% extends "layout/layout.html.twig" %}

{% block content %}

    <main class="main-content" data-uk-height-viewport="expand: true">

        <section class="uk-padding uk-padding-remove-horizontal">
            <div class="uk-container">
                <div class="uk-grid">

                    <div class="uk-width-5-6@m" data-uk-grid>

                        <div class="uk-width-1@m uk-margin-remove-bottom">
                            <div class="cp-bold cp-blue cp-title">{{ project.pro_name }}
                                <span class="uk-label cp-label cp-label-{{ project.sta_label }} uk-margin-remove-top uk-margin-remove-bottom">{{ project.sta_name }}</span>
                            </div>
                        </div>
                        <div class="uk-width-1@m uk-margin-small-top">
                            <h6>{{ project.pro_url }}</h6>
                        </div>

                        <div class="uk-width-1-6@m">
                            <div class="cp-blue cp-bold">Kundeninfo</div>
                        </div>
                        <div class="uk-width-5-6@m">
                            <div class="cp-bold">{{ project.cli_name }}</div>
                        </div>
                        <div class="uk-width-1-6@m  uk-margin-top">
                            <div></div>
                        </div>
                        <div class="uk-width-5-6@m  uk-margin-top">
                            <div class="cp-bold">{{ project.cli_address }}</div>
                        </div>
                        <div class="uk-width-1-6@m  uk-margin-top">
                            <div></div>
                        </div>
                        <div class="uk-width-5-6@m  uk-margin-top">
                            <div class="cp-bold">{{ project.cli_zipCode }} {{ project.cli_city }}</div>
                        </div>


                        <div class="uk-width-1-6@m uk-margin-top-large">
                            <div class="cp-bold cp-blue"> All. Info</div>
                        </div>
                        <div class="uk-width-5-6@m uk-margin-top-large">
                            <div class="cp-bold">{{ project.par_name }}</div>
                        </div>
                        <div class="uk-width-1-6@m uk-margin-top">
                            <div></div>
                        </div>
                        <div class="uk-width-5-6@m uk-margin-top">
                            <div class="cp-bold">{{ project.ser_name }}</div>
                        </div>

                        <div class="uk-width-1-6@m uk-margin-top-large">
                            <div class="cp-bold cp-blue">Aufgaben</div>
                        </div>
                        <div class="uk-width-1-6@m uk-margin-top-large">
                            <div class="cp-bold">Termin</div>
                        </div>
                        <div class="uk-width-2-3@m uk-margin-top-large">
                            <form action="">
                                <input type="checkbox" name="Termin" value="meeting"> Termin für Besprechung
                            </form>
                        </div>

                        <div class="uk-width-1-6@m uk-margin-top">
                            <div></div>
                        </div>
                        <div class="uk-width-1-6@m uk-margin-top">
                            <div class="cp-bold">Kunde</div>
                        </div>
                        <div class="uk-width-2-3@m uk-margin-top">
                            <form action="">
                                <input type="checkbox" name="Kunde" value="client"> Kunde in Comatic erfasst
                            </form>
                        </div>

                        <div class="uk-width-1-6@m uk-margin-top">
                            <div></div>
                        </div>
                        <div class="uk-width-1-6@m uk-margin-top">
                            <div class="cp-bold">Offerte</div>
                        </div>
                        <div class="uk-width-2-3@m uk-margin-top">
                            <form action="">
                                <input type="checkbox" name="Offerte" value="offerte"> Offerte als technisches Dokument
                                (iD)
                            </form>
                        </div>
                        <div class="uk-width-1-3@m uk-margin-top">
                            <div></div>
                        </div>
                        <div class="uk-width-2-3@m uk-margin-remove-top">
                            <form action="">
                                <input type="checkbox" name="Offerte" value="offerte"> Offert in Comatic
                            </form>
                        </div>


                    </div>

                    <div class="uk-width-1-6@m">

                        <div class="uk-width-1@m uk-margin-remove-bottom">
                            <a href="/projects/{{ project.pro_id }}/edit" class="cp-button uk-button uk-card-default uk-card-hover uk-button-small uk-align-right uk-margin-small-bottom">
                                Bearbeiten
                            </a>
                        </div>

                        <div class="uk-width-1@m uk-margin-small-top">
                            <a href="/projects" class="cp-button uk-button uk-card-default uk-card-hover uk-button-small uk-align-right">
                                Zurück
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </main>

{% endblock %}